{
  "name": "claude-session-visualizer",
  "version": "1.0.0",
  "description": "Real-time web dashboard for monitoring and managing Claude Code sessions",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "jsdom": "^23.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "session-visualizer",
    "dashboard"
  ],
  "license": "MIT"
}
